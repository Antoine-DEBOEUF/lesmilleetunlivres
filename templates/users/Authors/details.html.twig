{% extends "base.html.twig" %}

{% block title %}Fiche auteur
{% endblock %}

{% block body %}
	<h1>Fiche auteur</h1>

	<div>
		<h2>{{author.name}}
			{{author.firstName}}</h2>

		{% for book in author.books %}

			<div>
				<a href="{{path('books.details', {id: book.id})}}">
					{{book.file}}
					{{book.title}}
					{{book.isbn}}
					{{book.publisher}}
					{{book.publishingDate}}
				</a>

			</div>

		{% endfor %}

	</div>
{% endblock %}
