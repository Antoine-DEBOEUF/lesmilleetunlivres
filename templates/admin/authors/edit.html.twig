{% extends "base.html.twig" %}

{% block title %}Auteurs
	{{parent()}}
{% endblock %}

{% block body %}
	<h1>Modification d'une fiche auteur</h1>

	<div>
		{{form_start(form)}}
		{{form_widget(form)}}
		<button type="submit">Enregistrer les modifications</button>
		{{form_end(form)}}

		<form action="{{path('admin.author.delete', {id:author.id})}}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche?')">
			<input type="hidden" name="token" value="{{csrf_token('delete' ~ author.id)}}">
			<button>Supprimer</button>
		</form>

	</div>

{% endblock %}
