{% extends "base.html.twig" %}

{% block title %}
	Créer une fiche livre |
	{{parent()}}
{% endblock %}

{% block body %}
	<section>
		<h1>Création d'une fiche livre</h1>

		<div class="glassmorph">
			<a href="{{path('books.index')}}">Retour à la liste</a>

			{{form_start(form, {'attr':{'class':'formAdmin'}})}}
			{{form_widget(form)}}
			<button type="submit">Créer la fiche</button>
			{{form_end(form)}}
		</div>
	</section>
{% endblock %}
