{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe |
	{{parent()}}
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<h1>Réinitialiser le mot de passe</h1>

	{{ form_start(requestForm) }}
	{{ form_row(requestForm.email) }}
	<div>
		<small>
			Veuillez entrer l'adresse e-mail liée à votre compte, et nous y enverrons un lien pour réinitialiser votre mot de passe
		</small>
	</div>

	<button class="btn btn-primary">Envoyer l'email de réinitialisation</button>
	{{ form_end(requestForm) }}
{% endblock %}
